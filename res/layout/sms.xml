            <Button android:layout_width="wrap_content" android:text="@string/btnWissel" android:layout_height="wrap_content" android:id="@+id/btnWissel"></Button>
            <Button android:layout_width="wrap_content" android:text="@string/btnGaWeg" android:layout_height="wrap_content" android:id="@+id/btnGaWeg"></Button>
            <Button android:layout_width="wrap_content" android:text="@string/btnEindpunt" android:layout_height="wrap_content" android:id="@+id/btnEindpunt"></Button>
